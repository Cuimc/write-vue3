{
    "compilerOptions": {
        "outDir": "dist", // 输出的目录
        "sourceMap": true, // 生成对应的 .map 文件
        "target": "es2016", // 编译后的代码目标版本
        "module": "esnext", // 模块格式
        "moduleResolution": "node", // 模块解析方式
        "lib": [
            "esnext",
            "dom"
        ], // 设置吃的类库
        "strict": false, // 关闭严格模式
        "jsx": "preserve", // jsx 不转义
        "resolveJsonModule": true, // 允许导入 json 文件
        "esModuleInterop": true, // 允许使用 import xx from 'xx' 语法
        "baseUrl": ".",
        "paths": {
            "@vue/*": [
                "packages/*/src"
            ]
        }
    }
}